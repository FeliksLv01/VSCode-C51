{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile",
            "type": "shell",
            "command": "${workspaceFolder}\\.vscode\\compile.bat",
            "args": [
                "${workspaceFolder}",
                "${workspaceFolder}\\src",
                "${workspaceFolder}\\environment",
                "main"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}